---
import { Image } from 'astro:assets';
import HomeLayout from '../layouts/HomeLayout.astro';
import AnimatedGreeting from '../components/landing/AnimatedGreeting.svelte';
import Headshot from "../images/Headshot.png"
import Card from '../components/Card.svelte';
import Socials from '../components/Socials.svelte';
---

<HomeLayout title="FDIV">
	<div class="mx-auto flex flex-col max-w-7xl min-h-screen text-white">
		<p class="py-8 my-auto grow text-center font-code text-2xl font-bold text-white">Forrest Dunlap</p>
		<div class="flex flex-col grow lg:flex-row">
			<Image src={Headshot} alt="A photo of Forrest." height="256" width="256" format="webp" class="rounded-xl mx-auto h-64 w-64 aspect-square"/>
			<div class="mx-auto flex flex-col gap-4 py-4 md:py-8">
				<div class="flex select-none flex-row font-code text-lg text-white md:text-2xl lg:text-4xl">
					<p>console.log("</p>
					<AnimatedGreeting client:load />
					<p>!");</p>
				</div>
				<p class="max-w-2xl font-landing md:text-lg lg:text-xl">
					Hi! My name is Forrest Dunlap. I'm all about exploring the crossroads of code, creativity,
					and entrepreneurship. Dive into my YouTube channel for tech insights, or get a deeper dive
					on my <a class="text-emerald-400 underline hover:text-emerald-500" href="/essays">blog</a
					>.
				</p>
				<a class="text-emerald-400 underline hover:text-emerald-500" href="/essays"> My Blog </a>
				<a class="text-emerald-400 underline hover:text-emerald-500" href="/animations">
					Some Cool Animations
				</a>
			</div>
		</div>
		<div class="m-auto mt-6">
			<Card background="bg-slate-100" wipeSizes extras="p-6 pb-7 mb-24 bg-opacity-80">
				<Socials />
			</Card>
		</div>
	</div>
</HomeLayout>